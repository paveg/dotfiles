# Zsh environment variables - loaded for all zsh sessions

# XDG Base Directory Specification
export XDG_CONFIG_HOME="{{ .xdg_config_home }}"
export XDG_DATA_HOME="{{ .xdg_data_home }}"
export XDG_CACHE_HOME="{{ .xdg_cache_home }}"
export XDG_STATE_HOME="{{ .xdg_state_home }}"

# Zsh configuration
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

# Editor
export EDITOR="nvim"
export VISUAL="nvim"

# Language and locale
export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"

{{- if eq .chezmoi.os "darwin" }}
# macOS specific
export HOMEBREW_PREFIX="{{ .homebrew_prefix }}"
export HOMEBREW_CELLAR="{{ .homebrew_prefix }}/Cellar"
export HOMEBREW_REPOSITORY="{{ .homebrew_prefix }}"
export PATH="{{ .homebrew_prefix }}/bin:{{ .homebrew_prefix }}/sbin:$PATH"
export MANPATH="{{ .homebrew_prefix }}/share/man:$MANPATH"
export INFOPATH="{{ .homebrew_prefix }}/share/info:$INFOPATH"

# Disable Homebrew analytics
export HOMEBREW_NO_ANALYTICS=1
export HOMEBREW_NO_AUTO_UPDATE=1

{{- end }}

# Tool configuration
export STARSHIP_CONFIG="$XDG_CONFIG_HOME/starship.toml"
export MISE_CONFIG_DIR="$XDG_CONFIG_HOME/mise"
export MISE_DATA_DIR="$XDG_DATA_HOME/mise"
export MISE_CACHE_DIR="$XDG_CACHE_HOME/mise"

# Git configuration
export GIT_CONFIG_GLOBAL="$XDG_CONFIG_HOME/git/config"

# Development tools
export GOPATH="$HOME/repos"
export GOBIN="$GOPATH/bin"
export CARGO_HOME="$HOME/.cargo"
export RUSTUP_HOME="$HOME/.rustup"
export NODE_REPL_HISTORY="$XDG_DATA_HOME/node_repl_history"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
export PNPM_HOME="$XDG_DATA_HOME/pnpm"

# ghq: Git repository management
export GHQ_ROOT="$HOME/repos"

# Zsh specific
export HISTFILE="$XDG_STATE_HOME/zsh/history"
export HISTSIZE=50000
export SAVEHIST=50000

# Performance: disable compinit security check in CI/Docker
{{- if or (env "CI") (env "DOCKER") }}
export ZSH_DISABLE_COMPFIX=true
{{- end }}

# Terminal multiplexer auto-start control
# These variables control automatic startup of tmux and zellij
# DISABLE_MULTIPLEXER=1 disables both tmux and zellij auto-start
# Individual controls: DISABLE_AUTO_TMUX=1, DISABLE_AUTO_ZELLIJ=1
# Force enable: AUTO_TMUX=1, AUTO_ZELLIJ=1
# export DISABLE_MULTIPLEXER=1

{{- if .business_use }}
# Business/work environment variables
export BUSINESS_USE=1
{{- end }}

# Load PATH configuration
# This must be done in .zshenv to ensure consistent PATH in all contexts
if [[ -f "$ZDOTDIR/modules/path.zsh" ]]; then
  source "$ZDOTDIR/modules/path.zsh"
fi
